#include<iostream>

using namespace std;

bool isArmstrong(int n){
  int sum = 0;
  int duplicate = n;
  int count = 0;
  while(n>0){
    int lastDigit = n%10;
    count++;
    n = n/10;
  }
  n = duplicate;
  while(n>0){
    int lastDigit = n%10;
    sum = sum + pow(lastDigit, count);
    n = n/10;
  }
  if(sum==duplicate){
    return true;
  }
  else{
    return false;
  }
}
